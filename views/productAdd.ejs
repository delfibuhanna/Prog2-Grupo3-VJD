

<body>
	
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
     <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Agregar productos</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action = "/users/profile" method= 'GET' class="form" >
				<div class="div">
				 <label for="Imagen">Imagen:</label class="label">
				 <input type="file"name="Imagen" id="Imagen" required></input>
				 <% if (locals.errors && errors.imagen_producto) { %>
					<p class="error"><%= errors.imagen_producto.msg %></p>
				<% } %>
				</div>
				<div class="div">
				 <label for="NombreDelProducto">Nombre del producto:</label class="label">
				 <input type="text" name="Producto" id="MiProducto" placeholder="ej:lavarropas" required></input>
				 <% if (locals.errors && errors.nombre_producto) { %>
					<p class="error"><%= errors.nombre_producto.msg %></p>
				<% } %>
				</div>
				<div class="div">
				<label for="Descripcion">Descripción:</label class="label">
				<input type="text" name="Descripcion" id="DescripcionDelProducto" placeholder="Describa su producto" required></input>
				<% if (locals.errors && errors.descripcion) { %>
					<p class="error"><%= errors.descripcion.msg %></p>
				<% } %>
				</div>
				<div class="div">
					<% if (locals.errors && errors.	Descripcion) { %>
						<p class="error"><%= errors.Descripcion.msg %></p>
					<% } %>
				<button class="button">Agregar productos</button class="button">
				</div>
			</form>

	<%- include("./partials/footer") %>
	
</body>
</html>