<body>
	
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
     <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar producto</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form action = "/product/productEdit/" method="post" class="form">
				<input type="hidden" id="id" name="id" value="<%= data.id %>">

				<div class="div">
					<label for="imagen">Imagen:</label class="label">
					<input type="text"name="imagen" id="imagen" value="<%= data.foto %>" required ></input>
					<% if (locals.errors && errors.imagen) { %>
						<p class="error"><%= errors.imagen.msg %></p>
					<% } %>
				</div>
				<div class="div">
					<label for="producto">Nombre del producto:</label class="label">
					<input type="text" name="producto" id="producto" placeholder="ej:lavarropas" value="<%= data.nombre %>" required></input>
					<% if (locals.errors && errors.producto) { %>
						<p class="error"><%= errors.producto.msg %></p>
					<% } %>
				</div>
				<div class="div">
					<label for="descripcion">Descripción:</label class="label">
					<input type="text" name="descripcion" id="descripcion" placeholder="Describa su producto" value="<%= data.descripcion %>" required></input>
					<% if (locals.errors && errors.descripcion) { %>
						<p class="error"><%= errors.descripcion.msg %></p>
					<% } %>
				</div>
				<div class="div">
					<button class="button" type="submit">Editar producto</button class="button">
				</div>
			</form>

	<%- include("./partials/footer") %>
	
</body>
</html>