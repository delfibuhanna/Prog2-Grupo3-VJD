
<body>
	
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
     <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
			 <!-- <img src= "/images/users/" alt="foto de perfil" class="foto-perfil"> -->

			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= data.nombre %>
						<a href="/users/profileEdit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= data.mail%> </li>
						<li><%= data.Producto.length %> productos</li>
						<li>200 seguidores</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			
			<% for (let i = 4; i < data.Producto.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
                    <a href="/product/id/<%= data.Producto[i].id %>">
						
						<figure class="product-box_image">
							<img src= <%= lista[i].foto %> alt="cafetera moulinex" class= "imagenProductos">
						</figure>
						<article class="product-box_data">
							<h2><%= data.Producto[i].nombre %></h2>
							<p><%= data.Producto[i].descripcion %></p>
							<p>Comentarios: <%= data.Comentario.length %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>

	</div>
	<!-- Novedades -->

	<%- include("./partials/footer") %>

</body>	
</html>