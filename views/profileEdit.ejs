<body>
	
	<% if (locals.user != undefined) { %>
        <%- include('./partials/headerLogueado') %>
     <% } else { %>
        <%- include('./partials/header') %>
    <% } %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<!-- Show the "ultimos" products -->
			<form class="Formulario" action = "/users/profileEdit/<%= user.id %>" method= 'POST' class="form">
				<input type="hidden" name="id" value="<%= user.id %>">
				<div class="div">
					<label class="label" for="email">Email:</label>
					<input type="email"name="email" id="email" value="<%= user.mail %>" ></input>
					<% if (locals.errors && errors.email) { %>
						<p><%= errors.email.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<label for="nombre">Nombre:</label class="label">
					<input type="text"name="nombre" id="nombre" value="<%= user.nombre %>" ></input>
					<% if (locals.errors && errors.nombre) { %>
						<p><%= errors.nombre.msg%></p>
					<% } %>
				</div>
				<div>
					<label for="apellido">Apellido:</label class="label">
					<input type="text" name="apellido" id="apellido" value="<%= user.apellido %>" ></input>
					<% if (locals.errors && errors.apellido) { %>
						<p><%= errors.apellido.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<label for="usuario">Usuario:</label class="label">
					<input type="text" name="usuario" id="usuario" value="<%= user.usuario %>" ></input>
					<% if (locals.errors && errors.usuario) { %>
						<p><%= errors.usuario.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<label for="password">Contraseña:</label class="label">
					<input type="password"name="password" id="password" value="******"></input>
					<% if (locals.errors && errors.password) { %>
						<p><%= errors.password.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<label for="fecha">Fecha de nacimiento:</label class="label">
					<input type="date" name="fecha" id="fecha" value="<%= user.fechaNacimiento %>"></input>
					<% if (locals.errors && errors.fecha) { %>
						<p><%= errors.fecha.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<label for="documento">Numero de documento:</label class="div">
					<input type="number"name="documento" id="documento" value="<%= user.numeroDocumento %>"></input>
					<% if (locals.errors && errors.documento) { %>
						<p><%= errors.documento.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<label for="fotoPerfil">Foto de perfil:</label class="label">
					<input type="text"name="fotoPerfil" id="fotoPerfil" value="<%= user.foto %>"></input>
					<% if (locals.errors && errors.fotoPerfil) { %>
						<p><%= errors.fotoPerfil.msg%></p>
					<% } %>
				</div>
				<div class="div">
					<button class="button">Editar</button>
				</div>
				</form>

	<%- include("./partials/footer") %>

</body>
</html>